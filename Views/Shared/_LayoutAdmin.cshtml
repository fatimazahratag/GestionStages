@{
    Layout = null;
}

@functions {
    string IsActive(string controller, string actionKeyword)
    {
        var routeData = Context.GetRouteData();
        var currentController = routeData.Values["controller"]?.ToString();
        var currentAction = routeData.Values["action"]?.ToString();

        if (!string.Equals(controller, currentController, StringComparison.OrdinalIgnoreCase))
            return "";

        // ✅ Vérifie si le nom de l’action contient le mot clé
        return currentAction != null && currentAction.Contains(actionKeyword, StringComparison.OrdinalIgnoreCase)
            ? "active-sidebar"
            : "";
    }
}


<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Admin Dashboard</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
            background-color: #f8f7f5;
        }

        .sidebar {
            width: 250px;
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            background: #3e2723; /* Marron foncé */
            color: white;
            padding-top: 20px;
            transition: all 0.3s;
        }

            .sidebar a {
                color: #d7ccc8;
                text-decoration: none;
                display: block;
                padding: 12px 20px;
                border-radius: 8px;
                margin: 5px 10px;
                transition: background 0.2s;
            }

                .sidebar a:hover {
                    background: #6d4c41;
                    color: #fff;
                }

        .active-sidebar {
            background-color: #f5e0c3; /* nude clair */
            color: #3e2723 !important;
        }

        .topbar {
            height: 60px;
            margin-left: 250px;
            background: #5d4037;
            color: white;
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0 20px;
            box-shadow: 0 2px 6px rgba(0,0,0,0.2);
        }

            .topbar .username {
                font-weight: bold;
                color: #ffca28;
            }

        .content {
            margin-left: 250px;
            padding: 30px;
        }

        .card {
            border: none;
            border-radius: 15px;
            box-shadow: 0 3px 6px rgba(0,0,0,0.1);
        }

        .card-title {
            color: #5d4037;
            font-weight: 600;
        }

        .btn-gold {
            background-color: #ffca28;
            color: #3e2723;
            border-radius: 20px;
            font-weight: 600;
        }

            .btn-gold:hover {
                background-color: #ffc107;
            }

        .bg-light-brown {
            background-color: #efebe9;
        }

        .text-brown {
            color: #5d4037;
        }

        .text-gold {
            color: #ffca28;
        }

        .btn-outline-gold {
            border: 2px solid #ffca28;
            color: #5d4037;
            font-weight: 600;
        }

            .btn-outline-gold:hover {
                background-color: #ffca28;
                color: #3e2723;
            }

        .form-control {
            border-radius: 50px;
            padding-left: 15px;
            padding-right: 15px;
        }
    </style>
</head>
<body>

    <!-- Sidebar -->
    <nav class="sidebar bg-brown text-white">
        <h4 class="text-center mb-4"><i class="fas fa-graduation-cap"></i> Admin Panel</h4>
        <ul class="nav flex-column">
            <li class="nav-item">
                <a class="nav-link text-gold @IsActive("Admin", "Dashboard")" asp-controller="Admin" asp-action="Dashboard">
                    🏠 Dashboard
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-gold @IsActive("Admin", "Profile")" asp-controller="Admin" asp-action="Profile">
                    👤 Mon Profil
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-gold @IsActive("Admin", "EtudiantsList")" asp-controller="Admin" asp-action="EtudiantsList">
                    👨‍🎓 Étudiants
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-gold @IsActive("Admin", "EnseignantsList")" asp-controller="Admin" asp-action="EnseignantsList">
                    👩‍🏫 Enseignants
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-gold @IsActive("Admin", "DemandesList")" asp-controller="Admin" asp-action="DemandesList">
                    📨 Demandes
                </a>
            </li>
          
            <li class="nav-item">
                <a class="nav-link text-gold @IsActive("Admin", "SujetList")"
                   asp-controller="Admin" asp-action="SujetsList"
                   style='@(IsActive("Admin","SujetsList") == "active-sidebar"
                                   ? "background-color:#f5e0c3;color:#3e2723;font-weight:600;border-radius:8px;"
                                   : "")'>
                    📚 Sujets
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-gold @IsActive("Admin", "RapportsList")" asp-controller="Admin" asp-action="RapportsList">
                    📑 Rapports
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-gold @IsActive("Admin", "SoutenanceList")" asp-controller="Admin" asp-action="SoutenanceList">
                    ⚖️ Soutenances
                </a>
            </li>

           
           

            <li class="nav-item">
                <a class="nav-link text-gold" asp-controller="Auth" asp-action="Logout">
                    🚪 Déconnexion
                </a>
            </li>
        </ul>
    </nav>

    <!-- Topbar -->
    <div class="topbar d-flex justify-content-between align-items-center p-3 bg-light-brown shadow-sm">
        <div class="fs-5 text-brown">
            <i class="fas fa-tachometer-alt me-2"></i> Tableau de Bord
        </div>
        <form class="d-flex flex-grow-1 mx-3" method="get" action="/Admin/Search">
            <input type="text" name="query" class="form-control rounded-pill px-4" placeholder="🔍 Rechercher..." />
            <button type="submit" class="btn btn-gold ms-2 rounded-pill">
                <i class="fas fa-search"></i>
            </button>
        </form>
        <div class="d-flex align-items-center text-brown">
            <i class="fas fa-user-circle fa-lg me-2"></i> @ViewBag.AdminName
        </div>
    </div>

    <!-- Content -->
    <div class="content">
        @RenderBody()
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
