@model GestionStages.Models.Enseignant
@{
    Layout = "_LayoutEnseignant";
    ViewData["Title"] = "Modifier Profil";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4 bg-light-brown p-4">
        <h3 class="text-brown fw-bold mb-4">✏️ Modifier Profil</h3>

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <form asp-action="EditProfil" asp-controller="Enseignant" method="post">
            <input type="hidden" name="UtilisateurId" value="@Model.UtilisateurId" />

            <div class="mb-3">
                <label class="form-label text-brown">Nom complet</label>
                <input type="text" class="form-control" name="NomEnseignant" value="@Model.NomEnseignant" required />
            </div>

            <div class="mb-3">
                <label class="form-label text-brown">Email</label>
                <input type="email" class="form-control" name="Email" value="@Model.Email" required />
            </div>

            <div class="mb-3">
                <label class="form-label text-brown">Téléphone</label>
                <input type="text" class="form-control" name="Telephone" value="@Model.Telephone" />
            </div>

            <div class="mb-3">
                <label class="form-label text-brown">Département</label>
                <input type="text" class="form-control" name="DepartementAttache" value="@Model.DepartementAttache" />
            </div>

            <div class="mb-3">
                <label class="form-label text-brown">Filière</label>
                <input type="text" class="form-control" name="Filiere" value="@Model.Filiere" />
            </div>

            <button type="submit" class="btn btn-gold">
                💾 Enregistrer les modifications
            </button>
            <a href="@Url.Action("Profile", "Enseignant")" class="btn btn-secondary ms-2">Annuler</a>
        </form>
    </div>
</div>

<style>
    .btn-gold {
        background-color: #ffca28;
        color: #3e2723;
        font-weight: 600;
        transition: 0.3s;
    }

        .btn-gold:hover {
            background-color: #ffc107;
            color: #3e2723;
        }

    .bg-light-brown {
        background-color: #efebe9;
    }

    .text-brown {
        color: #5d4037;
    }
</style>
