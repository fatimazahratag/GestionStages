@model GestionStages.Models.ViewModels.StageDemandeViewModel

@{
    Layout = "~/Views/Shared/_LayoutEtudiant.cshtml";
    ViewData["Title"] = "Faire une Demande de Stage";
}

<style>
    :root {
        --gold: #E8C872;
        --dark: #1C1C1E;
        --light-gray: #f9f9f9;
        --shadow: rgba(0, 0, 0, 0.08);
        --font-primary: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    body {
        font-family: var(--font-primary);
        background-color: var(--light-gray);
    }

    h2 {
        color: var(--dark);
        font-weight: 700;
        text-align: center;
        margin-bottom: 2rem;
        font-size: 2rem;
    }

    form.card {
        background: white;
        max-width: 900px;
        margin: 0 auto 3rem auto;
        padding: 2rem 2.5rem;
        border-radius: 20px;
        box-shadow: 0 8px 24px var(--shadow);
    }

    label {
        font-weight: 600;
        color: var(--dark);
        margin-bottom: 0.3rem;
    }

    .form-control, .form-check-input {
        border-radius: 12px;
        border: 1.5px solid #ddd;
        transition: border-color 0.3s ease;
    }

        .form-control:focus {
            border-color: var(--gold);
            box-shadow: 0 0 8px var(--gold);
            outline: none;
        }

    .btn-submit {
        background-color: var(--gold);
        color: white;
        font-weight: 700;
        border-radius: 30px;
        padding: 0.8rem 2.5rem;
        border: none;
        cursor: pointer;
        transition: background-color 0.3s ease;
        width: 100%;
        max-width: 300px;
        margin: 1.5rem auto 0 auto;
        display: block;
    }

        .btn-submit:hover {
            background-color: #c3a654;
        }

    .text-danger {
        font-size: 0.875rem;
        margin-top: 0.25rem;
        display: block;
    }
</style>

<h2>📝 Faire une Demande de Stage</h2>

<form asp-action="AjouterDemandeStage" method="post" class="card" novalidate>
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3 text-center"></div>

    <!-- ORGANISME -->
    <h4>🏢 Informations sur l’Entreprise</h4>

    <div class="mb-3">
        <label asp-for="Entreprise"></label>
        <input asp-for="Entreprise" class="form-control" />
        <span asp-validation-for="Entreprise" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="DepartementOrganisme"></label>
        <input asp-for="DepartementOrganisme" class="form-control" />
        <span asp-validation-for="DepartementOrganisme" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="SecteurActiviteOrganisme"></label>
        <input asp-for="SecteurActiviteOrganisme" class="form-control" />
        <span asp-validation-for="SecteurActiviteOrganisme" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="AdresseOrganisme"></label>
        <input asp-for="AdresseOrganisme" class="form-control" />
        <span asp-validation-for="AdresseOrganisme" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="VilleOrganisme"></label>
        <input asp-for="VilleOrganisme" class="form-control" />
        <span asp-validation-for="VilleOrganisme" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="NomResponsableOrganisme"></label>
        <input asp-for="NomResponsableOrganisme" class="form-control" />
        <span asp-validation-for="NomResponsableOrganisme" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="FonctionResponsableOrganisme"></label>
        <input asp-for="FonctionResponsableOrganisme" class="form-control" />
        <span asp-validation-for="FonctionResponsableOrganisme" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="EmailResponsableOrganisme"></label>
        <input asp-for="EmailResponsableOrganisme" class="form-control" />
        <span asp-validation-for="EmailResponsableOrganisme" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="TelephoneResponsableOrganisme"></label>
        <input asp-for="TelephoneResponsableOrganisme" class="form-control" />
        <span asp-validation-for="TelephoneResponsableOrganisme" class="text-danger"></span>
    </div>

    <!-- STAGE -->
    <h4>📄 Informations sur le Stage</h4>

    <div class="mb-3">
        <label asp-for="TypeStage">Type de Stage</label>
        <select asp-for="TypeStage" class="form-control">
            <option value="">-- Sélectionnez --</option>
            <option>Stage de recherche</option>
            <option>Stage industriel</option>
            <option>Stage académique</option>
        </select>
    </div>
    <div class="mb-3">
        <label asp-for="EnseignantId">Encadrant Enseignant</label>
        <select asp-for="EnseignantId" class="form-control" asp-items="ViewBag.EnseignantsList">
            <option value="">-- Sélectionnez un enseignant --</option>
        </select>
        <span asp-validation-for="EnseignantId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Sujet"></label>
        <textarea asp-for="Sujet" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Sujet" class="text-danger"></span>
    </div>

    <div class="row g-3 mb-3">
        <div class="col-sm-6">
            <label asp-for="DateDebut"></label>
            <input asp-for="DateDebut" type="date" class="form-control" />
            <span asp-validation-for="DateDebut" class="text-danger"></span>
        </div>
        <div class="col-sm-6">
            <label asp-for="DateFin"></label>
            <input asp-for="DateFin" type="date" class="form-control" />
            <span asp-validation-for="DateFin" class="text-danger"></span>
        </div>
    </div>

    <div class="form-check mb-3">
        <input asp-for="AutorisationTraitement" class="form-check-input" type="checkbox" id="autorisationCheck" />
        <label asp-for="AutorisationTraitement" class="form-check-label" for="autorisationCheck">
            J’autorise le traitement des données
        </label>
        <span asp-validation-for="AutorisationTraitement" class="text-danger"></span>
    </div>

    <button type="submit" class="btn-submit">Soumettre</button>
</form>
