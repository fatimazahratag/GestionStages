@model GestionStages.Models.ViewModels.EditProfileViewModel

@{
    Layout = "~/Views/Shared/_LayoutEtudiant.cshtml";
    ViewData["Title"] = "Modifier mon Profil";
}

<link rel="stylesheet" href="~/css/etudiant/edit-profile.css" asp-append-version="true" />

<style>
    :root {
        --gold: #E8C872;
        --dark: #1C1C1E;
        --light-gray: #f9f9f9;
        --shadow: rgba(0, 0, 0, 0.08);
        --font-primary: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .btn-gold {
        background-color: var(--gold);
        color: #fff;
        border: none;
        font-weight: 600;
        padding: 0.75rem 2.5rem;
        font-size: 1.1rem;
        border-radius: 30px;
        cursor: pointer;
        transition: background-color 0.3s ease;
        text-decoration: none;
    }

        .btn-gold:hover {
            background-color: #c5ac54;
            color: #fff;
        }

    .container {
        max-width: 900px;
        margin: 2rem auto;
        background: var(--light-gray);
        border-radius: 20px;
        padding: 2rem 3rem;
        box-shadow: 0 8px 24px var(--shadow);
        font-family: var(--font-primary);
    }

    h2 {
        color: var(--dark);
        margin-bottom: 2rem;
    }

    form.card {
        background: #fff;
        padding: 2rem;
        border-radius: 12px;
        box-shadow: 0 4px 15px var(--shadow);
    }

    .form-label {
        font-weight: 600;
        color: var(--gold);
    }

    .form-control {
        border-radius: 8px;
        border: 1px solid #ddd;
        padding: 0.5rem 1rem;
        font-size: 1rem;
        transition: border-color 0.3s ease;
    }

        .form-control:focus {
            border-color: var(--gold);
            outline: none;
            box-shadow: 0 0 5px var(--gold);
        }

    .text-danger {
        font-size: 0.9rem;
        margin-top: 0.2rem;
    }

    .mt-3 {
        margin-top: 1rem !important;
    }

    .ms-2 {
        margin-left: 0.5rem !important;
    }

    .btn-secondary {
        background-color: #6c757d;
        border: none;
        color: white;
        padding: 0.75rem 2rem;
        border-radius: 30px;
        font-weight: 600;
        cursor: pointer;
        transition: background-color 0.3s ease;
        text-decoration: none;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
        }

    .mt-3 {
        margin-top: 1rem !important;
        display: flex;
        justify-content: center; /* centre horizontalement */
        gap: 1rem; /* espace entre les boutons */
    }

</style>

<div class="container mt-5">
    <h2>Modifier mon Profil</h2>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    <form asp-action="EditProfile" asp-controller="Etudiant" method="post" class="card shadow-sm">
        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="NomComplet" class="form-label"></label>
                <input asp-for="NomComplet" class="form-control" />
                <span asp-validation-for="NomComplet" class="text-danger"></span>
            </div>

            <div class="col-md-6 mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="col-md-6 mb-3">
                <label asp-for="Telephone" class="form-label"></label>
                <input asp-for="Telephone" class="form-control" />
                <span asp-validation-for="Telephone" class="text-danger"></span>
            </div>

            <div class="col-md-6 mb-3">
                <label asp-for="Filiere" class="form-label"></label>
                <input asp-for="Filiere" class="form-control" />
            </div>

            <div class="col-md-6 mb-3">
                <label asp-for="Niveau" class="form-label"></label>
                <input asp-for="Niveau" class="form-control" />
            </div>

            <div class="col-md-6 mb-3">
                <label asp-for="Module" class="form-label"></label>
                <input asp-for="Module" class="form-control" />
            </div>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-gold">Enregistrer</button>
            <a asp-action="Profile" class="btn btn-secondary ms-2">↩ Annuler</a>
        </div>
    </form>
</div>

@await Html.PartialAsync("_ValidationScriptsPartial")
