@model IEnumerable<GestionStages.Models.Etudiant>
@{
    Layout = "_LayoutAdmin";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold" style="color:#a87c4f;"><i class="fas fa-users"></i> Liste des Étudiants</h2>
</div>

<table class="table table-hover shadow-sm rounded" style="background-color: #fff; border: 2px solid #a87c4f;">
    <thead style="background-color: #a87c4f; color: white;">
        <tr>
            <th>Nom</th>
            <th>CNE</th>
            <th>Email</th>
            <th>Téléphone</th>
            <th class="text-center">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var e in Model)
        {
            <tr>
                <td>@e.NomComplet</td>
                <td>@e.CNE</td>
                <td>@e.Email</td>
                <td>@e.Telephone</td>
                <td class="text-center">
                    <button type="button" class="btn btn-sm" style="background-color:#a87c4f; color:white;"
                            data-bs-toggle="modal" data-bs-target="#detailsModal-@e.IdEtudiant">
                        <i class="fas fa-eye"></i>
                    </button>

                    <button type="button" class="btn btn-sm" style="background-color:#f4d8b4; color:#4b3b2b;"
                            data-bs-toggle="modal" data-bs-target="#editModal-@e.IdEtudiant">
                        <i class="fas fa-edit"></i>
                    </button>
                </td>
            </tr>

            <div class="modal fade" id="detailsModal-@e.IdEtudiant" tabindex="-1" aria-hidden="true">
                <div class="modal-dialog modal-lg modal-dialog-centered">
                    <div class="modal-content" style="border-radius:12px; box-shadow: 0 3px 6px rgba(168,124,79,0.2);">
                        <div class="modal-header" style="background-color:#a87c4f; color:white; border-top-left-radius:12px; border-top-right-radius:12px;">
                            <h5 class="modal-title"><i class="fas fa-user-graduate"></i> Détails Étudiant</h5>
                            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                        </div>
                        <div class="modal-body" style="padding: 2rem; color:#4b3b2b;">
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <div class="card" style="border:2px solid #a87c4f; box-shadow:0 3px 6px rgba(168,124,79,0.2); padding:1rem;">
                                        <h6 class="fw-bold text-secondary"><i class="fas fa-id-card"></i> Infos Générales</h6>
                                        <p><strong>Nom :</strong> @e.NomComplet</p>
                                        <p><strong>CNE :</strong> @e.CNE</p>
                                        <p><strong>Email :</strong> @e.Email</p>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="card" style="border:2px solid #a87c4f; box-shadow:0 3px 6px rgba(168,124,79,0.2); padding:1rem;">
                                        <h6 class="fw-bold text-secondary"><i class="fas fa-graduation-cap"></i> Académique</h6>
                                        <p><strong>Téléphone :</strong> @e.Telephone</p>
                                        <p><strong>Module :</strong> @e.Module</p>
                                        <p><strong>Niveau :</strong> @e.Niveau</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer" style="border:none;">
                            <button class="btn" style="background-color:#f4d8b4; color:#4b3b2b; border-radius:20px; padding:0.5rem 1.5rem;" data-bs-dismiss="modal">Fermer</button>
                        </div>
                    </div>
                </div>
            </div>

            <div class="modal fade" id="editModal-@e.IdEtudiant" tabindex="-1" aria-hidden="true">
                <div class="modal-dialog modal-lg modal-dialog-centered">
                    <div class="modal-content" style="border-radius:12px; box-shadow: 0 3px 6px rgba(168,124,79,0.2);">
                        <div class="modal-header" style="background-color:#f4d8b4; color:#4b3b2b; border-top-left-radius:12px; border-top-right-radius:12px;">
                            <h5 class="modal-title"><i class="fas fa-edit"></i> Modifier Étudiant</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                        </div>
                        <form asp-action="EditEtudiant" method="post" class="needs-validation" novalidate>
                            @Html.AntiForgeryToken()
                            <div class="modal-body" style="padding:2rem; color:#4b3b2b;">
                                <input type="hidden" name="IdEtudiant" value="@e.IdEtudiant" />

                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <label class="form-label fw-bold">Nom complet</label>
                                        <input type="text" name="NomComplet" value="@e.NomComplet" class="form-control rounded-pill" required />
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label fw-bold">CNE</label>
                                        <input type="text" name="CNE" value="@e.CNE" class="form-control rounded-pill" required />
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label fw-bold">Email</label>
                                        <input type="email" name="Email" value="@e.Email" class="form-control rounded-pill" required />
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label fw-bold">Téléphone</label>
                                        <input type="text" name="Telephone" value="@e.Telephone" class="form-control rounded-pill" />
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label fw-bold">Module</label>
                                        <input type="text" name="Module" value="@e.Module" class="form-control rounded-pill" />
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label fw-bold">Niveau</label>
                                        <input type="text" name="Niveau" value="@e.Niveau" class="form-control rounded-pill" />
                                    </div>
                                </div>
                            </div>
                            <div class="modal-footer" style="border:none;">
                                <button type="submit" class="btn" style="background-color:#a87c4f; color:white; border-radius:20px; padding:0.5rem 1.5rem;">Enregistrer</button>
                                <button type="button" class="btn" style="background-color:#f4d8b4; color:#4b3b2b; border-radius:20px; padding:0.5rem 1.5rem;" data-bs-dismiss="modal">Annuler</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        }
    </tbody>
</table>
